<Window x:Class="ProductApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Список товаров" Height="400" Width="600">
    <Grid>
        <Image Name="LogoImage" Source="Восьмерка.png" Width="30" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10"/>
        <TextBox Name="SearchBox" Width="200" Height="25" VerticalAlignment="Top" Margin="10"
                  TextChanged="SearchBox_TextChanged"/>

        <ListView Name="ProductListView" Margin="10,40,10,50" SelectionMode="Extended">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ID}" Width="50"/>
                    <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Title}" Width="250"/>
                    <GridViewColumn Header="Мин. цена" DisplayMemberBinding="{Binding MinCostForAgent}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Name="ChangePriceButton" Content="Изменить цену" Width="150" Height="30" 
                VerticalAlignment="Bottom" Margin="10" Click="ChangePrice_Click"/>
    </Grid>
</Window>
