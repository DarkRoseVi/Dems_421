<Page x:Class="DiyazAkhmetvaliev421.Pages.ListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DiyazAkhmetvaliev421.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListPage">
    <Grid>
        <Grid.RowDefinitions>
        <RowDefinition Height="75"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="75"/>
    </Grid.RowDefinitions>

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock>Поиcк</TextBlock>
        <TextBox x:Name="SearchTbx" TextChanged="SearchTbx_TextChanged"></TextBox>
        <TextBlock>Сортировка</TextBlock>
        <ComboBox x:Name="SortCbx" SelectionChanged="SortCbx_SelectionChanged">
            <ComboBoxItem>По наименованию по возрастанию</ComboBoxItem>
            <ComboBoxItem>По наименованию по убыванию</ComboBoxItem>
            <ComboBoxItem>По № производ. цеха по возрастанию</ComboBoxItem>
            <ComboBoxItem>По № производ. цеха по убыванию</ComboBoxItem>
            <ComboBoxItem>По мин. стоимости по возрастанию</ComboBoxItem>
            <ComboBoxItem>По мин. стоимости по убыванию</ComboBoxItem>
        </ComboBox>
        <TextBlock>Фильтрация</TextBlock>
        <ComboBox x:Name="FilterCbx" SelectionChanged="FilterCbx_SelectionChanged"></ComboBox>
    </StackPanel>

    <ScrollViewer Grid.Row="1">
        <WrapPanel HorizontalAlignment="Center" Name="ProductWP"></WrapPanel>
    </ScrollViewer>

    <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center">
        <Button Width="50" Margin="5" x:Name="BackButt" Click="BackButt_Click">←</Button>
        <StackPanel Orientation="Horizontal" x:Name="PagesSP">

        </StackPanel>
        <TextBlock Visibility="Collapsed" VerticalAlignment="Center" FontSize="60" x:Name="PageTb">1</TextBlock>
        <Button Width="50" Margin="5" x:Name="ForwardButt" Click="ForwardButt_Click">→</Button>
    </StackPanel>
    </Grid>
</Page>
